
var Hope  	= require('hope');
var nodevalida	= require('validator');




module.exports = function(parameters) {

  //var promise = new Hope.Promise();
  var error = null;
  console.log("esto vale mail antes de nada "+parameters.mail);
  console.log("esto vale mail antes de nada 1"+nodevalida.isEmail(parameters.mail));
  console.log("esto vale mail antes de nada 2 "+nodevalida.isNull(parameters.mail));
  if (nodevalida.isNull(parameters.mail)){
     error = {
        code: 403,
        message: "Mail is required."
      };  

  }
  else if (nodevalida.isNull(parameters.password)){
     error = {
        code: 403,
        message: "Password is required."
      };
   

  }
  else if (!nodevalida.isEmail(parameters.mail)){
     console.log("esto vale mail"+nodevalida.isEmail(parameters.mail));
     error = {
        code: 403,
        message: "Mail format is invalid."
      };   

  }
  
  return error;

}
